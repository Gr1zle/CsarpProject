<Window x:Class="InginerCalkylator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InginerCalkylator"
        mc:Ignorable="d"
        Title="Калькулятор инженера" ResizeMode="NoResize" Height="900" Width="550">

    <Grid Background="#202020">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="92"/>
            <RowDefinition Height="92"/>
            <RowDefinition Height="92"/>
            <RowDefinition Height="92"/>
            <RowDefinition Height="92"/>
            <RowDefinition Height="92"/>
            <RowDefinition Height="92"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Content="sin" Grid.Column="0" Grid.Row="2"
        FontSize="35" Background="#323232" Foreground="White" 
        Click="btn_Click"/>
        <Button Content="π" Grid.Column="1" Grid.Row="2"
        FontSize="35" Background="#323232" Foreground="White" 
        Click="btn_Click"/>
        <Button Content="e" Grid.Column="2" Grid.Row="2"
        FontSize="35" Background="#323232" Foreground="White" 
        Click="btn_Click"/>
        <Button Content="CE" Grid.Column="3" Grid.Row="2"
        FontSize="35" Background="#323232" Foreground="White" 
        Click="btn_Click"/>
        <Button Content="⌫" Grid.Column="4" Grid.Row="2"
        FontSize="35" Background="#323232" Foreground="White" 
        Click="btn_Click"/>

        <Button Content="x^2" Grid.Column="0" Grid.Row="3"
        FontSize="35" Background="#323232" Foreground="White" 
        Click="btn_Click"/>
        <Button Content="1/x" Grid.Column="1" Grid.Row="3"
        FontSize="35" Background="#323232" Foreground="White" 
        Click="btn_Click"/>
        <Button Content="|x|" Grid.Column="2" Grid.Row="3"
        FontSize="35" Background="#323232" Foreground="White" 
        Click="btn_Click"/>
        <Button Content="cos" Grid.Column="3" Grid.Row="3"
        FontSize="35" Background="#323232" Foreground="White" 
        Click="btn_Click"/>
        <Button Content="tg" Grid.Column="4" Grid.Row="3"
        FontSize="35" Background="#323232" Foreground="White" 
        Click="btn_Click"/>

        <Button Content="√x" Grid.Column="0" Grid.Row="4"
        FontSize="35" Background="#323232" Foreground="White" 
        Click="btn_Click"/>
        <Button Content="(" Grid.Column="1" Grid.Row="4"
        FontSize="35" Background="#323232" Foreground="White" 
        Click="btn_Click"/>
        <Button Content=")" Grid.Column="2" Grid.Row="4"
        FontSize="35" Background="#323232" Foreground="White" 
        Click="btn_Click"/>
        <Button Content="n!" Grid.Column="3" Grid.Row="4"
        FontSize="35" Background="#323232" Foreground="White" 
        Click="btn_Click"/>
        <Button Content="÷" Grid.Column="4" Grid.Row="4"
        FontSize="35" Background="#323232" Foreground="White" 
        Click="btn_Click"/>

        <Button Content="x^y" Grid.Column="0" Grid.Row="5"
        FontSize="35" Background="#323232" Foreground="White" 
        Click="btn_Click"/>
        <Button Content="7" Grid.Column="1" Grid.Row="5"
        FontSize="35" Background="#3b3b3b" Foreground="White" 
        Click="btn_Click"/>
        <Button Content="8" Grid.Column="2" Grid.Row="5"
        FontSize="35" Background="#3b3b3b" Foreground="White" 
        Click="btn_Click"/>
        <Button Content="9" Grid.Column="3" Grid.Row="5"
        FontSize="35" Background="#3b3b3b" Foreground="White" 
        Click="btn_Click"/>
        <Button Content="×" Grid.Column="4" Grid.Row="5"
        FontSize="35" Background="#323232" Foreground="White" 
        Click="btn_Click"/>

        <Button Content="10^x" Grid.Column="0" Grid.Row="6"
        FontSize="35" Background="#323232" Foreground="White" 
        Click="btn_Click"/>
        <Button Content="4" Grid.Column="1" Grid.Row="6"
        FontSize="35" Background="#3b3b3b" Foreground="White" 
        Click="btn_Click"/>
        <Button Content="5" Grid.Column="2" Grid.Row="6"
        FontSize="35" Background="#3b3b3b" Foreground="White" 
        Click="btn_Click"/>
        <Button Content="6" Grid.Column="3" Grid.Row="6"
        FontSize="35" Background="#3b3b3b" Foreground="White" 
        Click="btn_Click"/>
        <Button Content="-" Grid.Column="4" Grid.Row="6"
        FontSize="35" Background="#323232" Foreground="White" 
        Click="btn_Click"/>

        <Button Content="log" Grid.Column="0" Grid.Row="7"
        FontSize="35" Background="#323232" Foreground="White" 
        Click="btn_Click"/>
        <Button Content="1" Grid.Column="1" Grid.Row="7"
        FontSize="35" Background="#3b3b3b" Foreground="White" 
        Click="btn_Click"/>
        <Button Content="2" Grid.Column="2" Grid.Row="7"
        FontSize="35" Background="#3b3b3b" Foreground="White" 
        Click="btn_Click"/>
        <Button Content="3" Grid.Column="3" Grid.Row="7"
        FontSize="35" Background="#3b3b3b" Foreground="White" 
        Click="btn_Click"/>
        <Button Content="+" Grid.Column="4" Grid.Row="7"
        FontSize="35" Background="#323232" Foreground="White" 
        Click="btn_Click"/>

        <Button Content="ln" Grid.Column="0" Grid.Row="8"
        FontSize="35" Background="#323232" Foreground="White" 
        Click="btn_Click"/>
        <Button Content="+/-" Grid.Column="1" Grid.Row="8"
        FontSize="35" Background="#3b3b3b" Foreground="White" 
        Click="btn_Click"/>
        <Button Content="0" Grid.Column="2" Grid.Row="8"
        FontSize="35" Background="#3b3b3b" Foreground="White" 
        Click="btn_Click"/>
        <Button Content="," Grid.Column="3" Grid.Row="8"
        FontSize="35" Background="#3b3b3b" Foreground="White" 
        Click="btn_Click"/>
        <Button Content="=" Grid.Column="4" Grid.Row="8"
        FontSize="35" Background="#ff99a1" Foreground="#472b2d" 
        Click="btn_Click"/>

        <Viewbox StretchDirection="DownOnly" Stretch="Uniform" HorizontalAlignment="Right" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5">
            <TextBlock Text="" Foreground="White"  x:Name="UpBlock"  FontSize="25"/>
        </Viewbox>
        <Viewbox StretchDirection="DownOnly" Stretch="Uniform" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5">
            <TextBlock Text="" Foreground="White"  x:Name="DownBlock"  FontSize="50"/>
        </Viewbox>
    </Grid>
</Window>